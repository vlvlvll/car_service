@model List<EfDbCarService.Service>

@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Список услуг";
}

<h2>Список услуг</h2>

<table class="table table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Фото</th>
            <th>Название услуги</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImagePath" alt="Фото @item.ServiceName"
                         style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;" />
                </td>
                <td>@item.ServiceName</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <div class="d-flex flex-column gap-2">
                        <a asp-action="EditService" asp-route-id="@item.ServiceID" class="btn btn-warning btn-sm w-100">
                            Изменить
                        </a>
                        <form asp-action="DeleteService" asp-route-id="@item.ServiceID" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить эту услугу?');" class="w-100">
                            <button type="submit" class="btn btn-danger btn-sm w-100">Удалить</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>





