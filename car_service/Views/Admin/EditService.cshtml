@model EfDbCarService.Service

@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Редактировать услугу";
}

<h2>Редактировать услугу</h2>
<form asp-action="EditService" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ServiceID" />
    <input type="hidden" asp-for="ImagePath" />

    <div class="form-group">
        <label asp-for="ServiceName" class="control-label"></label>
        <input asp-for="ServiceName" class="form-control" />
        <span asp-validation-for="ServiceName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Текущее изображение</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="Текущее изображение"
                 style="width: 100px; height: 100px; object-fit: cover; border-radius: 8px;" />
        }
    </div>

    <div class="form-group mt-2">
        <label>Новое изображение</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Сохранить изменения</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

