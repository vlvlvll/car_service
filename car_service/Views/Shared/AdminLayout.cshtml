@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Панель администратора</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mb-3">
        ← В меню
    </a>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Боковая панель -->
            <div class="col-md-3 bg-light vh-100 p-3">
                <h4>Админ-панель</h4>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Admin" asp-action="AddService">Добавить услугу</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Admin" asp-action="RemoveService">Удалить услугу</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Admin" asp-action="ServiceList">Список услуг</a>
                    </li>
                    <!-- Здесь можно добавлять другие разделы -->
                </ul>
            </div>

            <!-- Основная часть -->
            <div class="col-md-9 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

