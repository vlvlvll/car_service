@model List<EfDbCarService.Service>

@{
    ViewData["Title"] = "Список сервисов";

    var imageMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
    {
        { "покраска", "/images/paint.jpg" },
        { "смена тормозов", "/images/brakes.jpg" }
    };
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<p><strong>Количество записей:</strong> @ViewBag.Count</p>

<table class="table table-hover table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Фото</th>
            <th>Название услуги</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            string imageUrl = imageMap.ContainsKey(service.ServiceName)
            ? imageMap[service.ServiceName]
            : "/images/no-image.png"; // изображение по умолчанию

            <tr>
                <td>
                    <img src="@imageUrl" alt="Фото @service.ServiceName"
                         style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;" />
                </td>
                
                <td>@service.ServiceName</td>
                <td>@service.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

